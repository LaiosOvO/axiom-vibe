{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Axiom",
  "version": "0.1.0",
  "identifier": "ai.axiom.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:4096",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../src/webview"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright © 2026 Axiom AI Team",
    "category": "DeveloperTool",
    "shortDescription": "AI 驱动的编码 Agent 平台",
    "longDescription": "Axiom 是一个完全从零实现的开源 AI 编码 Agent 平台，支持 Spec 驱动开发、Deep Research、自我成长和 Agent 编排",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "iOS": {
      "minimumSystemVersion": "13.0"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Axiom",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "dark",
        "titleBarStyle": "Visible",
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "tabbingIdentifier": null,
        "fileDropEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' http://localhost:* ws://localhost:* http://127.0.0.1:* ws://127.0.0.1:*",
        "img-src": "'self' data: http://localhost:* http://127.0.0.1:*",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'"
      },
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false,
      "assetProtocol": {
        "enable": true,
        "scope": []
      }
    },
    "trayIcon": null,
    "macOSPrivateApi": false
  },
  "plugins": {}
}
